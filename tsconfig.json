{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "noEmit": true,
    "noImplicitAny": false,
    "resolveJsonModule": true
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}